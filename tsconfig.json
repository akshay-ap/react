{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": false,
    "importHelpers": true
  },
  "include": ["./src/@types", "./src/index.ts"],
  "exclude": ["node_modules", "dist", "example"]
}
