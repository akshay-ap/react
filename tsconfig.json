{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es2017"],
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": false
  },
  "include": ["./src/@types", "./src/index.ts"],
  "exclude": ["node_modules", "dist", "example"]
}
