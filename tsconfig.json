{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,

    /* Strict Type-Checking */
    // TODO: remove and adapt for `strictNullChecks`
    "strict": true,
    "strictNullChecks": false
  },
  "include": ["./src/@types", "./src/index.ts"]
}
