{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true
  },
  "include": ["./src/@types", "./src/hooks", "./src/index.ts"]
}
